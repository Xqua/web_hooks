<?xml version="1.0" ?>
<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>
	<table>
		<name>*dbprefix*hub_subscriptions</name>
		<declaration>
			<field>
				<name>id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<autoincrement>1</autoincrement>
				<length>4</length>
			</field>
			<field>
				<name>timestamp</name>
				<type>integer</type>
				<notnull>false</notnull>
				<length>8</length>
			</field>
			<field>
				<name>topic</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>255</length>
			</field>
			<field>
				<name>callback</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>255</length>
			</field>
			<index>
				<name>hub_sub_uniq_index</name>
				<unique>true</unique>
				<field>
					<name>topic</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>callback</name>
					<sorting>ascending</sorting>
				</field>
			</index>
		</declaration>
	</table>
	<table>
		<name>*dbprefix*hub_notifications</name>
		<declaration>
			<field>
				<name>id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<autoincrement>1</autoincrement>
				<length>4</length>
			</field>
			<field>
				<name>timestamp</name>
				<type>integer</type>
				<notnull>false</notnull>
				<length>8</length>
			</field>
			<field>
				<name>payload</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>1024</length>
			</field>
			<field>
				<name>subscription_id</name>
				<type>integer</type>
				<notnull>false</notnull>
				<length>4</length>
			</field>
